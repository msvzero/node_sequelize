<h1 class="header">Add Shop</h1>

<form action="/shops" method="post" class="shop-form column">
	<input type="text" name="name" placeholder="Shop Name">
	<button>Submit</button>
</form>

<h1 class="shop-header">Shop Listing</h1>

<div class="row wrap">
	
	{{#each shops}}
		<div class="shop column">
			<h2>{{name}}</h2>
			<form action="/Coffe/{{id}}" method="post" class="column">
				<input type="text" name="name" placeholder="Coffe Name">
				<input type="text" name="type" placeholder="Type">
				<button>Add Coffe</button>
			</form>

			<h3>Coffe Listing</h3>
			{{#each Coffes}}
				<div class="Coffe">
					<h4>{{name}}</h4>
					<p>{{type}} Roast</p>
				</div>
			{{else}}
				<h4 class="empty">No Coffes have been added.</h4>
			{{/each}}
		</div>
	{{/each}}

</div>